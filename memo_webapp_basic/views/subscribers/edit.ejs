<div class="container">
  <div class="row">
    <div class="col-10 cst-signin">
      <form class="form-sigin" method="POST" action="<%=`/subscribers/${subscriber._id}/update?_method=PUT`%>">
        <h1 class="form-signin-heading">購読者プロフィール編集</h1>
        <input type="text" name="name" id="inputFirstName" class="form-control  cst-input" value="<%= subscriber.name %>" placeholder="お名前" autofocus>
        <input type="email" name="email" id="inputEmail" class="form-control  cst-input" value="<%= subscriber.email %>" placeholder="Eメールアドレス" required>
        <input type="text" name="zip_code" pattern="[0-9]{4}" class="form-control  cst-input" value="<%= subscriber.zip_code %>" placeholder="コース番号" id="inputZipCode" required>
        <br />
        <button class="btn btn-md cst-btn btn-block" type="submit">更新</button>
      </form>
    </div>
  </div>
</div>