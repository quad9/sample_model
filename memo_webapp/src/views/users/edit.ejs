<div class="container">
  <div class="row">
    <div class="col-10 cst-signin">
      <form class="form-sigin" method="POST" action="<%=`/users/${user._id}/update?_method=PUT`%>">
        <h1 class="form-signin-heading">プロフィール編集</h1>
        <!-- <label for="inputLastName">氏</label> -->
        <input type="text" name="last" id="inputLastName" class="form-control  cst-input" value="<%= user.name.last %>" placeholder="氏" autofocus>
        <!-- <label for="inputFirstName">名</label> -->
        <input type="text" name="first" id="inputFirstName" class="form-control  cst-input" value="<%= user.name.first %>" placeholder="名" autofocus>
        <!-- <label for="inputPassWord">パスワード</label> -->
        <input type="password" name="password" id="inputPassword" class="form-control  cst-input" value="<%= user.password %>" placeholder="パスワード">
        <!-- <label for="inputEmail">Eメールアドレス</label> -->
        <input type="email" name="email" id="inputEmail" class="form-control  cst-input" value="<%= user.email %>" placeholder="Eメールアドレス">
        <!-- <label for="inputZip_code">コース番号</label> -->
        <input type="text" name="zip_code" pattern="\d*" class="form-control  cst-input" value="<%= user.zip_code %>" placeholder="コース番号" id="inputZipCode">
        <br />
        <button class="btn btn-md cst-btn btn-block" type="submit">更新</button>
      </form>
    </div>
  </div>
</div>